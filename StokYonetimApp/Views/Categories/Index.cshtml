@model IEnumerable<Categories>

<h1>Kategoriler</h1>

<table class="table">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>

            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Yeni Kategori Ekle</a>
