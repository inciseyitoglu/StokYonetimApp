@model PriceHistory
@{
    var products = ViewBag.Products as IEnumerable<Products>; 
}

<h1>Yeni Fiyat Değişikliği Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ProductId">Ürün</label>
        <select asp-for="ProductId" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var product in products)
            {
                <option value="@product.ProductId">@product.ProductName</option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldPrice"></label>
        <input asp-for="OldPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="OldPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPrice"></label>
        <input asp-for="NewPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="NewPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChangeDate"></label>
        <input asp-for="ChangeDate" type="date" class="form-control" />
        <span asp-validation-for="ChangeDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
