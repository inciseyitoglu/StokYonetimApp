@model StockMovements
@{
    var products = ViewBag.Products as IEnumerable<Products>; // Ürünleri al
}

<h1>Yeni Stok Hareketi Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ProductId">Ürün</label>
        <select asp-for="ProductId" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var product in products)
            {
                <option value="@product.ProductId">@product.ProductName</option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MovementType"></label>
        <input asp-for="MovementType" class="form-control" />
        <span asp-validation-for="MovementType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MovementDate"></label>
        <input asp-for="MovementDate" type="date" class="form-control" />
        <span asp-validation-for="MovementDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
